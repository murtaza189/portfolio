html{box-sizing:border-box}*,*:before,*:after{box-sizing:inherit}
body{font-size:15px;line-height:1.5}
h1{font-size:36px}h2{font-size:30px; margin:10px 0; font-size:30px;}h3{font-size:24px}h4{font-size:20px}h5{font-size:18px; margin:10px 0;}h6{font-size:16px; font-weight:400; color:grey;}
a{
    color:inherit;
} 
#tekst{
    position:absolute;top:50%;left:50%;transform:translate(-50%,-50%);-ms-transform:translate(-50%,-50%);
    }
    
#grotetekst{
    font-size:64px;
    position:relative;
    animation:animatetop 0.4s};
    @keyframes animatetop{from{top:-300px;opacity:0} to{top:0;opacity:1}
    }
    

#middentekst{
    font-size:18px;
    text-align:center;
    }
#bgimg{
    position:relative;
    color:#fff;
    text-shadow: 3px 3px 3px black;
    background-image: url('images/lion.jpg');
    min-height: 100%;
    background-position: right;
    background-size: cover;
    }
    
#knop{
    padding: 5px;
    border: solid 3px grey;
    
    border-radius: 5px;
    margin-bottom:10px;
    text-align: center;
}
#knop a{
    text-decoration: none;
    color: white;
    font-family: flemish scipt;
}


.kleur{
    color:#000;
    background-color:#f1f1f1;
    }
.page{
    max-width:980px;
    margin:auto;
    margin-top:16px
    }
.grid:before,.grid:after{
    content:"";
    display:table;
    clear:both;
    
    
    }
    
.links{
    width:100%;
    padding:0 8px;
    float:left;
    
} 
@media (min-width: 601px){
.links{
        width: 33.33333%;
    }
}
  
.kleur{
    color:#000;
    background-color:#fff;
    color:#757575;
    box-shadow:0 4px 10px 0 rgba(0,0,0,0.2),0 4px 20px 0 rgba(0,0,0,0.19);
    }
.display{
    position:relative;
    }
#switchmode{
    position: fixed;
    top: 48%;
    left: 0;
    width: 50px;
    text-align: center;
    z-index: 9999;
    cursor: pointer;
    background: rgba(0,0,0,0.8);
    border-radius: 0 3px 3px 0;
    padding: 5px;
    box-sizing:border-box;
    display:block;
    
}
#switchmode .smtext{
        font-size: 9px;
    color: #aaa;
    text-transform: uppercase;
    line-height: 1.1em;
    display: block;
    margin: 2px 0;
}
    
#switchmode .active .switchbutton{
    background: #333;
}
#switchmode .switchbutton{
        overflow: hidden;
    width: 60%;
    margin: 8px auto;
    position: relative;
    border-radius: 20px;
    background: #555;
    height: 10px;
}
